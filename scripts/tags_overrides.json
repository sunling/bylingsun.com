  "domain_overrides": {
    "_comment": "特定域名的标签覆盖规则",
    "techcrunch.com": {
      "default_tags": ["startup", "technology"],
      "boost_categories": ["business", "technology", "startup"]
    },
    "arstechnica.com": {
      "default_tags": ["technology"],
      "boost_categories": ["technology", "science"]
    },
    "wired.com": {
      "default_tags": ["technology"],
