    }
  },
  
  "title_patterns": {
    "_comment": "基于标题关键词的映射规则",
    "patterns": {
      "(?i)\\b(chatgpt|gpt-\\d+|claude|gemini|llama)\\b": "ai",
      "(?i)\\b(react|vue|angular|svelte)\\b": "frontend",
      "(?i)\\b(node\\.?js|express|fastify)\\b": "nodejs",
      "(?i)\\b(python|django|flask|fastapi)\\b": "python",
      "(?i)\\b(rust|cargo|rustc)\\b": "rust",
      "(?i)\\b(go|golang)\\b": "golang",
      "(?i)\\b(kubernetes|k8s|docker|container)\\b": "devops",
      "(?i)\\b(aws|azure|gcp|cloud)\\b": "cloud",
      "(?i)\\b(startup|entrepreneur|founder)\\b": "startup",
      "(?i)\\b(investment|funding|vc|venture)\\b": "investment",
      "(?i)\\b(bitcoin|ethereum|crypto|blockchain)\\b": "cryptocurrency",
      "(?i)\\b(security|cybersecurity|hacking)\\b": "security",
      "(?i)\\b(design|ui|ux|interface)\\b": "design",
      "(?i)\\b(mobile|ios|android|app)\\b": "mobile",
      "(?i)\\b(database|sql|nosql|mongodb)\\b": "database",
      "(?i)\\b(api|rest|graphql|microservice)\\b": "api",
      "(?i)\\b(testing|qa|automation)\\b": "testing",
      "(?i)\\b(performance|optimization|speed)\\b": "performance",
      "(?i)\\b(open.?source|oss|github)\\b": "opensource"
    }
  },
  
