      "boost_categories": ["programming", "opensource"]
    },
    "arxiv.org": {
      "default_tags": ["research"],
      "boost_categories": ["research", "science", "ai"]
    },
    "openai.com": {
      "default_tags": ["ai"],
      "boost_categories": ["ai", "research"]
    },
    "paulgraham.com": {
